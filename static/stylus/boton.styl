@font-face {
	font-family: 'boton';
	src:url('../fonts/boton.eot?-lwrnok');
	src:url('../fonts/boton.eot?#iefix-lwrnok') format('embedded-opentype'),
		url('../fonts/boton.woff?-lwrnok') format('woff'),
		url('../fonts/boton.ttf?-lwrnok') format('truetype'),
		url('../fonts/boton.svg?-lwrnok#boton') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'boton';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-menu:before {
	content: "\b600";
}

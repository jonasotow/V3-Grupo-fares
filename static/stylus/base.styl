@import "normalize.styl"
@import "nib"
@import "boton.styl"

naranja = #C56626
cafe = #1D100C
texto1 = #333
link = #468CBF
blanco = #ffffff
rojo = #DF392E
gris_tenue = #f2f2f2
gris_bajito = #d7d7d7 
fondo = #f2f2f2
background = #eae6e5
textofooter = #b9b9b9

a 
	text-decoration none

body
	font-family 'Open Sans', sans-serif
	font-weight 300
	font-size 16px
header
	position relative
	overflow hidden
	background cafe
	.logos
		text-align center
		figure
			img
				width 90px
				background blanco
				border-radius 5px
				margin 0 0.2em 0.2em 0.2em
	.corp 
		display none
figure
	margin 0
ul
	margin 0
	padding 0
img
	vertical-align top
main 
	background #EAE6E5

footer
	background-color cafe

	.contacto
		padding 2em 0 0 0
		margin 0 auto
		width 85%
		.title
			color naranja
			text-align center
			margin-top 0.2em
			margin-bottom 0.5em
			padding 0
			font-weight 400

		.info
			color textofooter
			margin 0 auto
			width 100%
			text-align center
			padding-bottom 1em
			.ubica
				color naranja
			p 
				margin 0
			a 
				color link

.display-menu
	background naranja
	border 5px solid naranja
	border-radius 5px
	color blanco
	font-size 25px
	position absolute
	right 10px
	text-decoration none
	top 20px
.menus
	background-image url(../../static/image/backgrounds/bgpapel.png)

.menu
	display none
	.tab
		text-align center
		text-transform uppercase
		list-style none
		font-weight 400

		a
			color naranja
			height 50px
			line-height 50px
			display block
			border-bottom solid 3px transparent
			transition:.3s

			&:hover
				border-bottom solid 3px cafe
				color #blanco
				color cafe


.border-bottom
	border-bottom 1px solid gris_claro
.menu
	display none
.relative
	position relative

.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding
	padding 1em
.left
	float left
.right 
	float right
.round
	border-radius 50%
	overflow hidden
.wrap
	text-align center

.boxs
	padding 2em 0 1em 0
	width 90%
	margin  0 auto
	text-align left
.nosotros
	margin-bottom 65px

.categoria
	background blanco
	background-image url(../../static/image/backgrounds/poly.png)
	background-position 50% 50%
	border-radius 50%
	color naranja
	display inline-block
	margin-top 50px
	margin-bottom 61px
	margin-left .5em
	margin-right .5em
	padding 62px 1em 62px 1em
	text-align center
	width 114px

	&:hover
		background-color cafe

.categorias
	width 100%
	padding-top 2em
	padding-bottom 1em 
	margin 0 auto
	text-align center

.contenido
	padding 2em 0 1em 0
	overflow hidden
	text-align center
	margin 0 auto
.form
	.formulario
		fieldset
			border-radius 5px
			.control-group
				padding-left 2em
				label
					display block
					font-weight bold
					color texto1
				input
				textarea
					border-radius 5px
					background-color #ffffff
					border 1px solid #cccccc
					padding 4px 6px
			.opcion
				padding-left 2em
				input
				textarea
					border-radius 5px
					background-color #ffffff
					border 1px solid #cccccc
					padding 4px 6px
				.sent
					background-color #5cb85c
					border #4cae4c
					color blanco
					padding 7px 9px
					text-shadow rgba(0,0,0,0.5) 2px 2px 5px
					&:hover
						background-color #449d44
						border #398439
						
				.reset
					background-color #d9534f
					border #d43f3a
					color blanco
					padding 7px 9px
					text-shadow rgba(0,0,0,0.5) 2px 2px 5px
					&:hover
						background-color #c9302c
						border #ac2925
.slider 
	list-style-type none
	max-width 800px
	margin 0 auto
	padding-bottom 0.5em
	.items 
		text-align center
		vertical-align middle
		padding 2em
		.image
			img
				border-radius 5px
				width 100%
				opacity 0.6
			p 
				position absolute
				bottom -15px
				left 0
				right 0
				background rgba(black, 0.7)
				padding 2em
				border-radius 5px
				color blanco
	    		
.imgtext
	display inline-block
	.box
		figure
			width 100%
			img
				filter grayscale(100%)
				opacity: .6; 
				width 100%
			.text
				background rgba(black, 0.5)
				bottom 5px
				color blanco
				height 66px
				left 0px
				padding 1em
				position absolute
				right 0
				
.item
	display inline-block
	font-size 1rem
	text-align center
	vertical-align top
	width 90%
	position relative
	&:nth-child(even)
		margin-right 0
	p 
		text-align center
		color #666
	.icon-clock
	.icon-compass
	.icon-spinner
		font-size 8em
		color link
		text-shadow: rgba(0,0,0,0.5) 2px 2px 5px;

	.hexagono
		width 200px
		height 130px
		margin 60px auto
		line-height 130px
		background #ffffff
		position relative
		padding-bottom 5px 
		&:before
			content ""
			position absolute
			top -50px
			left 0
			width 0
			height 0
			border-left 100px solid transparent
			border-right 100px solid transparent
			border-bottom 50px solid #ffffff
		&:after
			content ""
			position absolute
			bottom -50px
			left 0
			width 0
			height 0
			border-left 100px solid transparent
			border-right 100px solid transparent
			border-top 50px solid #ffffff
.justify
	text-align justify
.fondopapel
	background-image url(../../static/image/backgrounds/bgpapel.png)

@media screen and (min-width: 480px)
 
	.imgtext
		.box
			figure
				img
					border-radius 10px
				.text
					border-radius 0 0 10px 10px

@media screen and (min-width: 800px)

	header
		position relative
		overflow hidden
		background cafe

		.logos
			height 90px
			text-align left
			padding-left 30px
			figure
				img
					width 143px
					background #fff
					border-radius 0 0 5px 5px
			.corp 
				display block
				position absolute
				top 8px
				right 40px
				padding 0.3em
				background blanco
				border-radius 5px

				img
					opacity 0.5
			
	footer
		.contacto
			width 100%
			text-align center
			.info
				display inline-block
				width 47%
	.button-menu
		display none
	.menus
		text-align right
	.menu
		display inline-block
		overflow hidden
		width 481px
		.tab
			float left
			list-style none
			padding .1em
			a 
				cursor pointer
				display block
				padding 1em
				border-top solid 3px transparent
				border-bottom none
				&:hover
					border-top solid 3px naranja
					border-bottom none
	.boxs
		width 40%

	.banner
		width 430px
		height 268px
		margin 0 auto
	
	.contenido
		padding-top 1.3em
	
	.form
		.formulario
			fieldset
				border-radius 5px
				.control-group
					padding-left 5em
				.opcion
					padding-left 5em
					
	.item
		width 17rem
		margin-bottom 1em
		margin-right 1em
		&:nth-child(even)
			margin-right 1em
	.rt-top
		width 30%
		border-radius 0 5px 5px 0
		h1
			text-align right
			padding-right 20px
	
	



